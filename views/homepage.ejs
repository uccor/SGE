<script type="text/javascript">setTimeout(function sunrise () {document.getElementsByClassName('header')[0].style.backgroundColor = '#118798';}, 0);</script>

<div class="default-page">
    <div class="header">
        <h1 id="main-title" class="container"><%= __('Sistema de GestiÃ³n de Empleados') %></h1>
        <!--<h3 class="container">You're looking at: <code><%= view.pathFromApp + '.' +view.ext %></code></h3>-->
    </div>
    
    <div class="main container clearfix">
        <div>
            <div  ng-controller="EmpleadoController">
            <form>

                <section>
                    <div class="panel-heading">
                			<h2 class="title" align="center" styles="backgroundColor=black"> Alta de empleados </h2>
                	</div>
                    
                    <div class="form-group">
                        <label for="nombreInput">Nombre</label>
                        <input type="text" class="form-control" id="nombreInput" ng-model="empleado.nombre" placeholder="Nombre">
                    </div>
                      
                    <div class="form-group">
                        <label for="apellidoInput">Apellido</label>
                        <input type="text" class="form-control" id="apellidoInput" ng-model="empleado.apellido" placeholder="Apellido">
                    </div>
                      
                    <div class="form-group">
                         <label >Puesto</label>
                            <select class="form-control" ng-model="empleado.puesto">
                                <option>Jefe</option>
                                <option>Empleado</option>
                                <option>The big boss</option>
                            </select>
                    </div>
                    
                    <button class="btn btn-default" ng-click="altaEmpleado()">Agregar</button>
                    
                </section>
                
                <section>
                    <div class="panel-heading">
                			<h2 class="title" align="center" styles="backgroundColor=black"> Lista de empleados </h2>
                	</div>
                
                    <div>
                        <ul>
                            <li ng-repeat="empleado in empleados">
                                        {{empleado.nombre}}
                                        {{empleado.apellido}}
                                        {{empleado.puesto}}
                                    <button class="btn btn-default" ng-click="bajaEmpleado(empleado.id)">Eliminar</button>
                                    <button class="btn btn-default" ng-click="modificarEmpleado(empleado.id)">Modificar</button>
                            </li>
                        </ul>
                    </div>
                    
                    
                    
                </section>
                
                <section>
                    <div class="panel-heading">
                			<h2 class="title" align="center" styles="backgroundColor=black"> Organigrama de la empresa </h2>
                	</div>
                
                    <div ng-controller="OrganigramaController">
                        <p>Organigrama de la Empresa</p>
                        
                        <div>Todos los BigBoss
                            <li ng-repeat = "empleado in empleados">
                                {{empleado.puesto  =="The big boss"}}
                        </div>
                        
                        <div>
                            Todos los Jefes
                        </div>
                        
                        <div>
                            Todos los Empleados
                        </div>
                    
                    </div>
                    
                </section>    
    
            </form>
    </div>
</div>

