                	</div>
                
                	<br>
                    <br>
                    
                	<table id="conCollapse">
                	    
                	<tr class="form-group">
                        <td><label >ID: </label></td>
                        <td><select class="form-control" ng-model="empleado.id" ng-options="empleado.id as empleado.id for empleado in empleados">
                                <option>id</option>
                            </select>
                        </td>
                    </tr>
                	    
                	<tr class="form-group">
                        <td><label for="nombreInput">Nuevo nombre: </label></td>
                        <td><input type="text" class="form-control" id="nombreInput" ng-model="empleado.nombre" placeholder="Nombre"></td>
                    </tr>
                    
                    <tr class="form-group">
                        <td><label for="apellidoInput">Nuevo apellido: </label></td>
                        <td><input type="text" class="form-control" id="apellidoInput" ng-model="empleado.apellido" placeholder="Apellido"></td>
                    </tr>
                    
                    <tr class="form-group">
                         <td><label >Nuevo puesto: </label></td>
                         <td><select class="form-control" ng-model="empleado.puesto" ng-options="puesto.id as puesto.nombrePuesto for puesto in puestos">
                                <option>puesto</option>
                            </select>
                         </td>
                    </tr>
                    </tr>
                    
                    <tr class="form-group">
                        <td><label >Nuevo jefe: </label></td>
                        <td><select class="form-control" ng-model="empleado.jefe" ng-options="empleado.id as empleado.nombre for empleado in empleados">
                                <option >Chuck Norris</option>
                            </select>
                        </td>
                    </tr>
                    
                    <tr class="center">
                        <td colspan='2' align="center">
                            <button class="btn btn-default" ng-click="modificarEmpleado(empleado.id)">Modificar</button>
                        </td>
                    </tr>
                	    
                	</table>
                    
