                <section id="altaEmpleados" ng-controller="PuestoController">
                    <br>
                    <br>
                    <br>
                    <br>
                    
                    <div class="panel-heading" style="background-color:#cccccc; overflow: auto; width:100%;">
                			<h2 class="title" align="center" styles="backgroundColor=black"> Alta de empleados </h2>
                	</div>
                	
                	<br>
                    <br>
                    
                	<table id="conCollapse">
                	    
                	<tr class="form-group">
                        <td><label for="nombreInput">Nombre: </label></td>
                        <td><input type="text" class="form-control" id="nombreInput" ng-model="empleado.nombre" placeholder="Nombre"></td>
                    </tr>
                    
                    <tr class="form-group">
                        <td><label for="apellidoInput">Apellido: </label></td>
                        <td><input type="text" class="form-control" id="apellidoInput" ng-model="empleado.apellido" placeholder="Apellido"></td>
                    </tr>
                    
                    <tr class="form-group">
                         <td><label >Puesto: </label></td>
                         <td><select class="form-control" ng-model="empleado.puesto" ng-options="puesto.nombrePuesto as puesto.nombrePuesto for puesto in puestos">
                                <option>jhjjh</option>
                            </select>
                         </td>
                    </tr>
                    
                    <tr class="form-group">
                        <td><label >Jefe: </label></td>
                        <td><select class="form-control" ng-model="empleado.jefe" ng-options="empleado.id as empleado.nombre for empleado in empleados">
                                <option >Chuck Norris</option>
                            </select>
                        </td>
                    </tr>
                    
                    <tr class="center">
                        <td colspan='2' align="center">
                            <button class="btn btn-default" ng-click="altaEmpleado()">Agregar</button>
                        </td>
                    </tr>
                	    
                	</table>
                    
                </section>
                
                <section id="puestos" ng-controller="PuestoController">
                    
                    <div class="panel-heading" style="background-color:#cccccc; overflow: auto; width:100%;">
                			<h2 class="title" align="center" styles="backgroundColor=black"> Alta de puestos </h2>
                	</div>
                	
                    
                	<table id="conCollapse">
                	    
                	<tr class="form-group">
                        <td><label for="nombreInput">Puesto: </label></td>
                        <td><input type="text" class="form-control" id="puestoInput" ng-model="puesto.nombrePuesto" placeholder="Puesto"></td>
                    </tr>
                    
                     <tr class="center">
                        <td colspan='2' align="center">
                            <button class="btn btn-default" ng-click="altaPuesto()">Agregar</button>
                        </td>
                    </tr>
                	    
                	</table>
                </section>
                
                <section id="listarPuestos" ng-controller="PuestoController" >
                    
                    <br>
                    <br>
                    <br>
                    <br>
                    
                    <div class="panel-heading" style="background-color:#cccccc; overflow: auto;">
                			<h2 class="title" align="center" styles="backgroundColor=black"> Lista de puestos </h2>
                	</div>
                
                    <br>
                    <br>
                
                    <div>
                        <table id="conCollapse">
                            <thead bgcolor="#DCDCDC">
								<tr>
									<th>Puesto</th>
									<th>Acción</th>
								</tr>
							</thead>
                            <tr ng-repeat="puesto in puestos" class="ng-scope">
                                        <td>{{puesto.nombrePuesto}}</td>
                                        <td><button class="btn btn-default" ng-click="bajaPuesto(puesto.id)">Eliminar</button></td>
                                        
                            </tr>
                        </table>
                    </div>
                    
                </section>
                
                <section id="listaEmpleados">
                    
                    <br>
                    <br>
                    <br>
                    <br>
                    
                    <div class="panel-heading" style="background-color:#cccccc; overflow: auto;">
                			<h2 class="title" align="center" styles="backgroundColor=black"> Lista de empleados </h2>
                	</div>
                
                    <br>
                    <br>
                
                    <div>
                        <table id="conCollapse">
                            <thead bgcolor="#DCDCDC">
								<tr>
									<th>Nombre</th>
									<th>Apellido</th>
									<th>Puesto</th>
									<th>Acción</th>
								</tr>
							</thead>
                            <tr ng-repeat="empleado in empleados">
                                        <td><a contentEditable="true" editable-text="empleado.nombre">{{empleado.nombre || 'empty'}}</a></td>
                                        <td>{{empleado.apellido}}</td> 
                                        <td>{{empleado.puesto}}</td>
                                    <td><button class="btn btn-default" ng-click="bajaEmpleado(empleado.id)">Eliminar</button></td>
                            </tr>
                        </table>
                    </div>
                    
                </section>
                
                <section id="modificacionEmpleados">
                    <br>
                    <br>
                    <br>
                    <br>
                    
                    <div class="panel-heading" style="background-color:#cccccc; overflow: auto; width:100%;">
